{
  "name": "xethya",
  "version": "0.0.0",
  "description": "A framework to build role-playing games.",
  "main": "dist/xethya.js",
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build": "yarn clean && tsc --outDir lib && webpack",
    "type-check": "tsc",
    "test": "nyc mocha --reporter spec --require ts-node/register src/**/*.test.ts",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "keywords": [
    "xethya",
    "game",
    "development",
    "game",
    "framework"
  ],
  "author": "Joel A. Villarreal Bertoldi",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "awesome-typescript-loader": "^3.5.0",
    "chai": "^4.1.2",
    "mocha": "^5.0.1",
    "nyc": "^11.4.1",
    "shx": "^0.2.2",
    "ts-node": "^5.0.0",
    "typescript": "^2.7.2",
    "webpack": "3.11.0",
    "webpack-cli": "^2.0.9"
  },
  "dependencies": {
    "eventemitter3": "^3.0.1"
  }
}
